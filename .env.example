# ============================================
# API KEYS
# ============================================

# Cerebras GPT-Oss-120B (OpenAI-compatible API)
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_BASE_URL=https://api.cerebras.ai/v1  # Update with actual Cerebras endpoint

# Deepgram STT (Speech-to-Text)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ElevenLabs TTS (Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=default_voice_id  # Optional: specific voice ID per agent

# Twilio (Phone Calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com  # Your public webhook URL

# ============================================
# DATABASE
# ============================================

# PostgreSQL Database
DB_URL=postgresql://user:password@localhost:5432/agent_workspace

# ============================================
# VECTOR DATABASE (FAISS)
# ============================================

# FAISS Configuration
VECTOR_DB_CHOICE=faiss
FAISS_INDEX_DIR=./data/faiss_indices  # Directory for FAISS index files
EMBEDDING_DIMENSION=384  # or 768 depending on embedding model choice

# ============================================
# MODELS
# ============================================

# LLM Model
LLM_MODEL=gpt-oss-120b  # Cerebras model identifier

# Embedding Model (HuggingFace SentenceTransformers)
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2  # 384 dimensions
# Alternative: sentence-transformers/all-mpnet-base-v2  # 768 dimensions

# ============================================
# SERVER CONFIGURATION
# ============================================

HOST=0.0.0.0
PORT=8000
DEBUG=False
ENVIRONMENT=development  # development, staging, production

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================

WS_MAX_CONNECTIONS=100  # Maximum concurrent WebSocket connections
SESSION_TIMEOUT=300  # Session timeout in seconds (5 minutes)
WS_HEARTBEAT_INTERVAL=30  # Heartbeat ping interval in seconds

# ============================================
# AUDIO STREAMING CONFIGURATION
# ============================================

# Audio format for telephony (Twilio standard)
AUDIO_SAMPLE_RATE=8000  # Hz
AUDIO_CHANNELS=1  # Mono
AUDIO_ENCODING=pcm_mulaw  # Twilio PCM mu-law format

# ============================================
# AGENT CONFIGURATION
# ============================================

# Default agent settings
DEFAULT_AGENT_NAMESPACE_PREFIX=agent_
MAX_TOOLS_PER_AGENT=20
MAX_KNOWLEDGE_BASE_SIZE_MB=100  # Maximum KB size per agent in MB
